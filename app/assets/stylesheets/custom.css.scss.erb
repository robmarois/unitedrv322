/* header */

#header {
	position: relative;
	width: 100%;
	height: 185px;
	background: #fff;
	background: url(/assets/flag.png) no-repeat;
}

#left-header {
	float: left;
	width: 230px;
	height: 152px;
	background: asset-url("header-rv-left.png", image) no-repeat;
	opacity: .65;
	top: -20px;
	&:hover {
	opacity: 1;
  }
}

#right-header {
	float: right;
	width: 274px;
	height: 154px;
	background: asset-url("header-rv-right.png", image) no-repeat;
	opacity: .65;
	top: -20px;
	&:hover {
	opacity: 1;
  }
}

#logo {
	position: absolute;
	top: -30px;
	left: 360px;
	width: 200px;
	height: 160px;
	background: asset-url("logo.png", image) no-repeat;
	-webkit-transition: opacity .2s ease-in-out;
	-moz-transition: opacity .2s ease-in-out;
	-o-transition: opacity .2s ease-in-out;
	transition: opacity .2s ease-in-out;
	&:hover {
	opacity: .70;
  }
}

.header-address {
		padding-top: 140px;
		overflow: clear;
}

.header-address .left {
	margin-left: 45px;
	margin-top: -25px;
	color: #000;
	font: bold 16px "DroidSansBold", Verdana,sans-serif;
	float: left;
	opacity: 0.75;
}

.header-address .left:hover, .header-address .right:hover {
	opacity: 1.0;
}

.header-address .center {
	margin-left: 170px;
	margin-top: -17px;
	color: #244a6a;
	font: normal 24px "MarketingScriptRegular", Georgia, serif;
	float: left;
}

.header-address .right {
	margin-right: 95px;
	margin-top: -25px;
	color: #000;
	font: bold 16px "DroidSansBold", Verdana,sans-serif;
