/* background gradient */

#background {
background-color: #2867b7;
background-image: -webkit-gradient(linear, left top, left bottom, from(rgb(40, 103, 183)), to(rgb(185, 213, 246)));
background-image: -webkit-linear-gradient(top, rgb(40, 103, 183), rgb(185, 213, 246));
background-image: -moz-linear-gradient(top, rgb(40, 103, 183), rgb(185, 213, 246));
background-image: -o-linear-gradient(top, rgb(40, 103, 183), rgb(185, 213, 246));
background-image: -ms-linear-gradient(top, rgb(40, 103, 183), rgb(185, 213, 246));
background-image: linear-gradient(top, rgb(40, 103, 183), rgb(185, 213, 246));
filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,StartColorStr='#2867b7', EndColorStr='#b9d5f6');
}

.container {
  background-color: #fff;
  border-right: 4px solid #919191;
	border-left: 4px solid #919191;
}

/* header */

#header {
	position: relative;
	width: 100%;
	height: 185px;
	background: #fff;
	background: url(/assets/flag.png) no-repeat;
}

#left-header {
	float: left;
	width: 230px;
	height: 152px;
	background: asset-url("header-rv-left.png", image) no-repeat;
	opacity: .65;
	top: -20px;
	&:hover {
	opacity: 1;
  }
}

#right-header {
	float: right;
	width: 274px;
	height: 154px;
	background: asset-url("header-rv-right.png", image) no-repeat;
	opacity: .65;
	top: -20px;
	&:hover {
	opacity: 1;
  }
}

#logo {
	position: absolute;
	top: -30px;
	left: 360px;
	width: 200px;
	height: 160px;
	background: asset-url("logo.png", image) no-repeat;
	-webkit-transition: opacity .2s ease-in-out;
	-moz-transition: opacity .2s ease-in-out;
	-o-transition: opacity .2s ease-in-out;
	transition: opacity .2s ease-in-out;
	&:hover {
	opacity: .70;
  }
}

.header-address {
		padding-top: 140px;
		overflow: clear;
}

.header-address .left {
	margin-left: 45px;
	margin-top: -25px;
	color: #000;
	font: bold 16px "DroidSansBold", Verdana,sans-serif;
	float: left;
	opacity: 0.75;
}

.header-address .left:hover, .header-address .right:hover {
	opacity: 1.0;
}

.header-address .center {
	margin-left: 170px;
	margin-top: -17px;
	color: #244a6a;
	font: normal 24px "MarketingScriptRegular", Georgia, serif;
	float: left;
}

.header-address .right {
	margin-right: 95px;
	margin-top: -25px;
	color: #000;
	font: bold 16px "DroidSansBold", Verdana,sans-serif;
	float: right;
	opacity: 0.75;
	text-align: right;
}

/* navigation */

#primary {
	width: 940px;
	height: 28px;
	background-color: #efefef;
	margin-top: 10px;
	margin-bottom: 20px;
	padding-top: 14px;
	-webkit-box-shadow: 0px 2px 4px #ccc;
	-moz-box-shadow: 0px 2px 4px #ccc;
	box-shadow: 0px 2px 4px #ccc;
	font: bold 13px "DroidSansBold", Verdana,sans-serif;
	font-weight: bold;
	text-transform: uppercase;
	letter-spacing: 1px;
	
	ul li {
    display: inline;
    padding-left: 33px;
  }
  
  li a {
    padding: 5px 15px;
    color: #64645d;
    text-shadow: 1px 1px 1px #fff;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
    &:hover {
      color: #dc692e;
      background: #efefe9;
    }
  }
}

