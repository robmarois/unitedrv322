    <section id="newsletter" class="box box-right">
      <header>
        <h1 class="script">Have A Question?</h1>
      </header>
      <div class="contact-form">
      <p>Have a question about our location or services, or just a comment about the site? </p>
      <p>Drop us a note below. <p>
      </div>
      
      <%= form_for @question, :html => {:id => "sign-up"}, :validate => true do |f| %>
        <fieldset class="contact-form">
        <%= f.label :name %>
        <%= f.text_field :name, :id=>"news-firstname", :placeholder=>"Your Name" %>

        <%= f.label :email %> 
        <%= f.email_field :email, :id=>"news-email", :placeholder=>"Your Email Address" %>

        <%= f.label :phone %>
        <%= f.text_field :phone, :id=>"news-phone", :placeholder=>"Your Phone Number (optional)" %>

        <%= f.label :question %>
        <%= f.text_area :question, :id=>"news-comments", :rows => 4, :placeholder=>"Your Question" %>
        <br />
        <br />
        <%= f.submit "Submit" %>    
        </fieldset>

      <% end %>
    </section> 

