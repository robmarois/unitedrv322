<div class = "banner_listing ">
  <%= image_tag "bestofthebest.png" %>
	<h2>Thank you for nominating us for the Best of the Best 2012! </h2><a href="/news" style="text-decoration:underline">View recent news</a>

</div>

	<section id="promotional">
		<ul class="polaroids" style="width:260px;">
			<li>
				<a title="Hiking in Yellowstone"><%= image_tag "rvfeatured.jpg" %></a>
			</li>
			<li class="messy1">
				<a title="Family Reunion"><%= image_tag "rv2.jpg" %></a>
			</li>
			<li class="messy">
				<a title="Smokies Camping Trip"><%= image_tag "rv3.jpg" %></a>
			</li>
			<li class="messy2">
				<a title="Heading to the Coast"><%= image_tag "rv4.jpg" %></a>
			</li>
		</ul>
		
		<div id="selections">
			<h2>Search Our Inventory</h2>
				<%= form_for @search do |f| %>
			  
			  <fieldset id="search">
				<p>
				<%= f.label "Camper Type" %>
				<%= f.collection_select :category_id, Category.order(:category_name), :id, :category_name, :prompt => "Show All Types" %>
				</p>
				
				<p>
				<%= f.label "Keyword (optional)" %>
				<%= f.text_field :keywords %>
				</p>
								
			  <div class="actions add-margin"><%= f.submit "Find my RV" %></div>
			  </fieldset>
					
		<% end %>
		</div>
	
	</section>


	
	<div id="blocks">
		
		<section id="news" class="box">
			<header>
				<h1 class="script">Latest Additions</h1>
			</header>
			<% @feed_items.each do |f| %>
				<article class="news-item">
					<header>
						<h1>
							<a href="/campers/<%= f.id %>"><%= truncate(f.headline, :length => 42) %></a>
						</h1>
					</header>	
					<p><time datetime="2011-01-26" pubdate><%= f.created_at.time.to_formatted_s(:long_ordinal)  %></time></p>
				</article>
			<% end %>
		</section>

		<section id="specials" class="box">
			<header>
				<h1 class="script">Featured Camper</h1>
			</header>
			<a href="/campers/<%= @special.camper.id %>">
			<p><%= truncate(@special.camper.headline, :length => 60) %></p>
			
			<% for attachment in @special.camper.attachments %>
		    <% if attachment.id == @special.camper.attachment_id %>
				  <%= image_tag attachment.file_url(:thumb), :class => "price", :title => attachment.description,  :href => attachment.file_url if attachment.file? %>
		    <% end %>
	    <% end %>
	    
				<p><%= strip_tags(truncate(@special.camper.features, :length => 80)) %></p>
			</a>
		</section>

		<section id="newsletter" class="box box-right">
			<header>
				<h1 class="script">Newsletter Sign-up</h1>
			</header>
			<p>Be the first to find out about new inventory!</p>
			<%= form_for @subscriber, :html => {:id => "sign-up"} do |f| %>
				<fieldset>
				<label for="news-name" >Name</label>
				<%= f.text_field :name, :id=>"news-name", :placeholder=>"Your Name" %>
				
				<label for="news-email" >Email</label> 
				<%= f.email_field :email, :id=>"news-email", :placeholder=>"Your Email Address" %>
				
				<%= f.submit "Sign up" %>
				</fieldset> 

				<p class="privacy">Our customers matter to us. <br />We'll never sell or share your info with others.</p>
				
			<% end %>
				
		</section>

	</div>




  