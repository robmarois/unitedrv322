
<div class="listing">
  <div class="listing_wrapper round">	
    <h1> Refine Your Search</h1>	
    <%= form_for @search do |f| %>
    
      <fieldset id="search">
        <span class="col1">
          <%= f.label "Type" %>
          <%= f.collection_select :category_id, Category.order(:category_name), :id, :category_name, :include_blank => "Select All" %>
        </span>
        <span class="col2">    
          <%= f.label :keyword %>
          <%= f.text_field :keywords %>
        </span>
        <span class="col4">
          <div class="field" style="margin-top:30px"><%= f.submit "Find my RV" %></div>
        </span>
        
      </fieldset>
    <% end %>
  </div>


  <% if @search.campers.count == 0 %>
    <h1 class="search_results no_results">Sorry, we did not find a match for your search.</h1>
  <% else %>
    <h1 class="search_results">Search Results</h1>
    <%= render @search.campers %>
  <% end %>

</div>
